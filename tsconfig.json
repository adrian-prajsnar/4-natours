{
    "compilerOptions": {
        "target": "es2017",
        "module": "NodeNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "nodenext"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
